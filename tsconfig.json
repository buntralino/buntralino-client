{
    "include": [
        "src"
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "noImplicitAny": true,
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "paths": {
            "node_modules/*": [
                "./node_modules/*"
            ]
        },
    }
}
